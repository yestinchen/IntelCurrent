<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    <include layout="@layout/common_head"/>
    <LinearLayout 
        android:id="@+id/group_detail_layout"
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:background="@drawable/ic_user_panel_bg"
      	android:layout_margin="5dp"
      	android:orientation="horizontal"
        >
        <ImageView 
            android:id="@+id/group_detail_bg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:background="@drawable/png_group_block_default"
            />
        <LinearLayout 
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            >
            <TextView 
                android:layout_width="160dp"
                android:layout_height="35dp"
                android:id="@+id/group_gname"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                />
 			<LinearLayout 
 			    android:layout_width="fill_parent"
 			    android:layout_height="wrap_content"
 			    android:orientation="horizontal"
 			    android:layout_marginTop="10dp"
 			    >
 			   <TextView 
			    android:layout_height="40dp"
			    android:layout_width="60dp"
			    android:background="@drawable/ic_user_list_cell_btn_bg"
			    android:id="@+id/group_edit_btn"
			    android:gravity="center"
			    android:textColor="@color/ic_user_list_cell_btn_color"
			    android:textStyle="bold"
			    android:text="@string/group_detail_edit"
	   			 />
 			   <TextView 
			    android:layout_height="40dp"
			    android:layout_width="60dp"
			    android:layout_marginLeft="10dp"
			    android:background="@drawable/ic_user_list_cell_btn_bg"
			    android:id="@+id/group_search_btn"
			    android:gravity="center"
			    android:textColor="@color/ic_user_list_cell_btn_color"
			    android:textStyle="bold"
			    android:text="@string/group_detail_find"
	   			 />
 			</LinearLayout>
        </LinearLayout>
    </LinearLayout>
	<LinearLayout 
	    android:id="@+id/group_userlist_layout"
	    android:layout_width="fill_parent"
	    android:layout_height="320dp"
		android:layout_margin="5dp"
	    android:orientation="vertical"	   
	    >
        <include layout="@layout/activity_loading"
            	android:id="@+id/group_user_loading"/>
	    <TextView 
	        android:id="@+id/group_user_nums"
	        android:layout_width="100dp"
	        android:layout_height="40dp"
	        android:layout_marginLeft="5dp"
	        android:textColor="#000000"
	        android:textSize="16sp"
	        android:textStyle="bold"
	        android:background="@drawable/ic_group_tab_bg"
	        android:gravity="center"
	        />
	    <ListView 
	        android:id="@+id/group_user_list"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:scrollbars="none"
	        ></ListView>
	</LinearLayout>
</LinearLayout>